@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PustokMVC.Models;
@model HeroSlider
@{
    ViewData["Title"] = "Create";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create Slider</h6>

    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" type="text" class="form-control" name="Title" />
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input type="text" id="Text" name="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ImageURL">ImageURL</label>
                <input type="text" id="ImageUrl" name="ImageUrl" class="form-control" />
            </div>
            <div class="form-group">
                <p>Choose position:</p>
                <label asp-for="IsRight">Right</label>
                <input type="radio" id="IsRight" name="IsRight" value="Right" />
                <label asp-for="IsRight">Left</label>
                <input type="radio" id="IsRight" name="IsRight" value="Left" />
                
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>


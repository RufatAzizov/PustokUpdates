@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@using PustokMVC.Models
@using PustokMVC.ViewModels.CategoryVM;
@model IEnumerable<CategoryListItemVM>
@{
    ViewData["Title"] = "Index";
}
@section styles {
    <link href="~/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@section scripts {
    <script src="~admin/js/demo/datatables-demo.js"></script>
}
<div class="table-responsive">
    <td><a asp-action="Create" class="btn btn-outline-success space-db--100">Add new category</a></td>

    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <tread>
            <th>Id</th>
            <th>Name</th>
            <th cosplan="2">Action</th>
            
        </tread>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model ?? new List<CategoryListItemVM>())
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                        <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="text-center" colspan="4">No Data</td>
                </tr>
            }
        </tbody>
    </table>
</div>